{
  "name": "xml-data-explorer-v2",
  "displayName": "XML Data Explorer v2",
  "description": "Visualize and manipulate XML data with interactive tables and charts",
  "version": "0.0.1",
  "publisher": "xml-data-explorer",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onLanguage:xml"],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xml-explorer",
          "title": "XML Explorer",
          "icon": "$(file-code)"
        }
      ]
    },
    "views": {
      "xml-explorer": [
        {
          "id": "xmlExplorer.files",
          "name": "XML Files",
          "when": "workspaceHasXmlFiles"
        },
        {
          "id": "xmlExplorer.elements",
          "name": "Elements",
          "when": "xmlFileActive"
        }
      ]
    },
    "commands": [
      {
        "command": "xmlDataExplorer.openExplorer",
        "title": "Open XML Data Explorer",
        "category": "XML Data Explorer"
      },
      {
        "command": "xmlDataExplorer.viewData",
        "title": "View Data",
        "category": "XML Data Explorer"
      },
      {
        "command": "xmlDataExplorer.copyData",
        "title": "Copy Data",
        "category": "XML Data Explorer"
      },
      {
        "command": "xmlDataExplorer.copyXPath",
        "title": "Copy XPath",
        "category": "XML Data Explorer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "xmlDataExplorer.openExplorer",
          "when": "resourceExtname == .xml",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "xmlDataExplorer.openExplorer",
          "when": "editorLangId == xml",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "xmlDataExplorer.openExplorer",
          "when": "view == xmlExplorer.files",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "xmlDataExplorer.viewData",
          "when": "view == xmlExplorer.elements",
          "group": "inline"
        },
        {
          "command": "xmlDataExplorer.copyData",
          "when": "view == xmlExplorer.elements",
          "group": "inline"
        },
        {
          "command": "xmlDataExplorer.copyXPath",
          "when": "view == xmlExplorer.elements",
          "group": "inline"
        }
      ]
    },
    "when": {
      "workspaceHasXmlFiles": "workspaceHas:*.xml",
      "xmlFileActive": "editorLangId == xml"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
